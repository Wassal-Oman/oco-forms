<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>

    <!-- Head Partial -->
    <%- include('partials/head'); %>

    <title>استمارات الباحث الاجتماعي</title>
    <style>
        input[type=number]::-webkit-inner-spin-button, 
        input[type=number]::-webkit-outer-spin-button { 
            -webkit-appearance: none; 
            margin: 0; 
        }
        .card {
          width: 700px;
        }
    </style>
</head>

<body class="">
  <div class="wrapper ">
    <div class="sidebar" data-color="purple" data-background-color="white" data-image="/img/sidebar.jpg">

      <!-- Logo -->
      <div class="logo">
        <a href="/" class="simple-text logo-normal">
        استمارات الباحث الاجتماعي
        </a>
      </div>

      <!-- Sidebar Partial -->
      <%- include('partials/sidebar'); %>

    </div>
    <div class="main-panel">

      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <p class="navbar-brand">تعديل مستخدم</p>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
        </div>
      </nav>


      <div class="content">
        <div class="container-fluid">
            <div class="row">
              <div class="card mx-auto">
                <div class="card-header card-header-primary">
                  <h4 class="card-title">تعديل بيانات المستخدم</h4>
                </div>
                <div class="card-body">
                  <%- include('partials/messages'); %>
                  <form action="/admin/users/update" method="POST">
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">الرقم الوظيفي</label>
                          <input name="id" type="number" class="form-control" value="<%= employee.id %>" readonly>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">اسم المستخدم</label>
                          <input name="name" type="text" class="form-control" value="<%= employee.name %>" required>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">رقم الهاتف</label>
                          <input name="phone" type="number" class="form-control" value="<%= employee.phone %>" required>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">عنوان البريد الالكتروني</label>
                          <input name="email" type="email" class="form-control" value="<%= employee.email %>" required>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                  <div class="form-group">
                                      <select name="type" class="custom-select">
                                          <option value="A" <% if(employee.type === 'A') { %><%= 'selected' %><% }%>>مسؤول النظام</option>
                                          <option value="M" <% if(employee.type === 'M') { %><%= 'selected' %><% }%>>مدير البحث الاجتماعي</option>
                                          <option value="R" <% if(employee.type === 'R') { %><%= 'selected' %><% }%>>الباحث الاجتماعي</option>
                                      </select>
                                  </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">تعديل</button>
                    <a href="/admin/users" class="btn">رجوع</a>
                    <div class="clearfix"></div>
                  </form>
                </div>
              </div>
            </div>
        </div>
        <!-- footer partial -->
        <%- include('partials/footer'); %>
      </div>
    </div>

    <!-- Bottom Partial -->
    <%- include('partials/bottom'); %>
</body>

</html>
