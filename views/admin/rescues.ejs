<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>

    <!-- Head Partial -->
    <%- include('partials/head'); %>

    <title>استمارات الباحث الاجتماعي</title>
</head>

<body class="">
  <div class="wrapper ">
    <div class="sidebar" data-color="purple" data-background-color="white" data-image="/img/sidebar.jpg">

      <!-- Logo -->
      <div class="logo">
        <a href="/" class="simple-text logo-normal">
        استمارات الباحث الاجتماعي
        </a>
      </div>

      <!-- Sidebar Partial -->
      <%- include('partials/sidebar'); %>

    </div>
    <div class="main-panel">

      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <p class="navbar-brand">الاستمارات الاغاثية</p>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
        </div>
      </nav>

      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title ">استمارات الكوارث الطبيعية</h4>
                  <p class="card-category">احصائيات الكوارث الطبيعية</p>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                        <th>الرقم المتسلسل</th>
                        <th>المستفيد</th>
                        <th>تاريخ ادخال الاستمارة</th>
                        <th>تاريخ تعديل الاستمارة</th>
                      </thead>
                      <tbody>
                        <% if(data != null && data.length > 0 ) { %>
                        <% data.forEach(d => { %>
                          <tr>
                            <td><%= d.id %></td>
                            <td><%= d.beneficiaryId %></td>
                            <td><%= d.createdAt %></td>
                            <td><%= d.updatedAt %></td>
                          </tr>
                        <% }); } else { %>
                          <tr>
                            <th colspan="4" class="text-center">لا توجد بيانات مسجلة</th>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- footer partial -->
        <%- include('partials/footer'); %>
      </div>

    </div>

    <!-- Bottom Partial -->
    <%- include('partials/bottom'); %>
</body>

</html>
