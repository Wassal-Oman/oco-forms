<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <!-- Head Partial -->
    <%- include('partials/head'); %>

    <title>تسجيل الدخول</title>
    <style>
        input[type=number]::-webkit-inner-spin-button, 
        input[type=number]::-webkit-outer-spin-button { 
            -webkit-appearance: none; 
            margin: 0; 
        }
        .card {
          width: 500px;
          margin-top: 100px;
        }
        .btn {
          width: 200px;
        }
    </style>
  </head>

  <body>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="card mx-auto">
            <div class="card-header card-header-primary text-center">
              <img src="/img/logo.png" width="200" height="200" />
              <h3 class="card-title text-center">
                استمارات الباحث الاجتماعي
              </h3>
            </div>
            <div class="card-body">
              <%- include('partials/messages'); %>
              <form action="/login" method="POST">
                <div class="form-group">
                  <label class="bmd-label-floating">الرقم الوظيفي</label>
                  <input name="id" type="number" class="form-control" required />
                </div>
                <div class="form-group">
                  <label class="bmd-label-floating">كلمة المرور</label>
                  <input name="password" type="password" class="form-control" required />
                </div>
                <div class="form-group">
                  <a href="/forget-password" class="btn custom-button pull-left">
                    هل نسيت كلمة المرور؟
                  </a>
                  <button type="submit" class="btn btn-primary pull-right">
                    تسجيل الدخول
                  </button>
                </div>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Bottom Partial -->
    <%- include('partials/bottom'); %>
  </body>
</html>
